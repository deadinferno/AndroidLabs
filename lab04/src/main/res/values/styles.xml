<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">

        <!--By default, this is the color applied to the action bar background-->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!--By default, this is the color applied to the status bar (via statusBarColor) and navigation bar (via navigationBarColor).-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!--By default, this is the color applied to framework controls (via colorControlActivated).-->
        <item name="colorAccent">@color/colorAccent</item>

        <!--Фон окна-->
        <item name="android:windowBackground">@color/colorActivityBackground</item>

        <!--Основной цвет текста-->
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.MoreDarker">
        <item name="android:background">@color/colorArticleTitle</item>
    </style>


    <!-- ////////// Стиль навигационного меню //////////-->
    <style name="AppTheme.NavDrawer">
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">@color/colorNavDrawerBackground</item>
        <item name="android:listDivider">@color/colorNavDrawerDivider</item>
        <item name="android:windowBackground">@color/colorNavDrawerBackground</item>
    </style>

    <style name="AppTheme.NavDrawer.Menu">
        <item name="android:windowBackground">@color/colorNavDrawerBackground</item>
    </style>

    <!--<item name="android:windowBackground">@color/colorNavDrawerBackground</item>-->

    <!-- ////////// Стили текста //////////-->
    <style name="TextAppearance" parent="TextAppearance.AppCompat"></style>

    <style name="TextAppearance.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextAppearance.Bold">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="AppTheme.TextAppearance">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.TextAppearance.Large">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
